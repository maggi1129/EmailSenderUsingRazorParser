@using Email.Core.Parser.Models
@model HelloHowdyModel

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!--[if !mso]><!-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--<![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
        .addresse {
            padding-top: 4%;
            font-family: Segoe UI;
            font-size: 20px;
            padding-left: 10px;
            padding-right: 5px;
            color: #0000FF;
        }

        .messageText {
            padding-top: 1%;
            padding-bottom: 1%;
            font-family: Segoe UI;
            font-size: 20px;
            padding-left: 10px;
            padding-right: 5px;
            color: #505050;
        }
    </style>
</head>
<body>
    <p>
        <span class="addresse">
        @if (String.IsNullOrEmpty(@Model.GuestFirstName))
        {
            @:Hello @Model.GuestGeneralName,

        }
        else
        {
            @:Hello @Model.GuestFirstName,

        }
    </span>
    <br />
    <span class="messageText">
        Howdy? Let's meet at @Model.MeetingLocation!
    </span>
        </p>
</body>
</html>
